<%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>

	<% if flash[:warning] %>
      <div id="error" class="alert alert-danger alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><!-- <span class="sr-only">Close</span> --></button>
        <%= flash[:warning] %>
      </div>
    <% end %>
    <% if flash[:notice] %>
      <div id="notice" class="alert alert-success alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><!-- <span class="sr-only">Close</span> --></button>
        <%= flash[:notice] %>
      </div>
    <% end %>

	<div class="form-group">
		<%= f.text_field :email, :placeholder => "Email", :class => "form-control input-lg" %>
	</div>
	<div class="form-group">
		<%= f.password_field :password, :placeholder => "Password", :class => "form-control input-lg" %>
	</div>

	<div class="form-group">
		<div class="checkbox-inline">
		  <label>
		    <%= f.check_box :remember_me %> Remember me
		  </label>
		</div>
	</div>

	<div class="form-group">
		<%= f.submit "Sign in", :class => "btn btn-success btn-lg btn-block" %>
	</div>

	<div class="form-group">
		<%= link_to "Forgot your password?", new_password_path(:user) %>
	</div>

<% end %>
