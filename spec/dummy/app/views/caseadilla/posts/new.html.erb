<h2>Add a new post</h2>

<%= form_for @posts, :url => caseadilla_posts_path do |f| %>

	<%= render :partial => 'caseadilla/posts/form', :locals => { :f => f } %>

	<p class="submits">
		<%= link_to 'Cancel', caseadilla_posts_path, :class => 'btn btn-mini btn-danger' %>
		<%= f.submit "Add new posts", :class => "btn btn-mini btn-primary" %>
	</p>

<% end %>

<%= content_for :sidebar do %>
	<li><%= link_to "#{caseadilla_show_icon "th-list"}Back to list".html_safe, caseadilla_posts_path %></li>
<% end %>
