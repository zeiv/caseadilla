<!-- Scaffolding generated by Caseadilla 1.0.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= caseadilla_sort_link "Title", :title %></th>
			<th><%= caseadilla_sort_link "Body", :body %></th>
			<th><%= caseadilla_sort_link "User", :user_id %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<% posts.each do |post| %>
		<tr>
			<td><%= caseadilla_table_cell_link post.title, caseadilla_post_path(post) %></td>
			<td><%= caseadilla_table_cell_link post.body, caseadilla_post_path(post) %></td>
			<td><%= caseadilla_table_cell_link post.user_id, caseadilla_post_path(post) %></td>
			<td class="delete">
				<%= link_to(caseadilla_show_row_icon("trash"), caseadilla_post_path(posts), :method => :delete, :data => { :confirm => "Are you sure you want to delete this posts?" }) %>
			</td>
		</tr>
	<% end %>
</table>
